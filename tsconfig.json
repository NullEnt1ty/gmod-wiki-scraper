{
	"compilerOptions": {
		"strictBindCallApply": true,
		"strictFunctionTypes": true,
		"strictNullChecks": true,
		"emitDecoratorMetadata": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"outDir": "dist",
		"target": "ES2022",
		"moduleResolution": "NodeNext",
		"module": "NodeNext",
		"declaration": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["src/**/*.test.ts"]
}
